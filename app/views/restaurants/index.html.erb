<div class="container">
  <h1>Restaurants</h1>
  <ul>
    <% @restaurants.each do |restaurant| %>
      <li>
        <%= link_to restaurant.name, restaurant_path(restaurant), class: "link" %>
      </li>
    <% end %>
  </ul>
  <%= link_to new_restaurant_path, class: "btn-elegant" do %>
    <i class="fa fa-plus"> Add new restaurant</i>
  <% end %>
</div>
